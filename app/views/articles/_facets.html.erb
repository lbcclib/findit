<% @facets.each do |facet| %>
  <div class="panel panel-default facet_limit">
    <div aria-expanded="true" class="panel-heading">
      <h5 class="panel-title facet-field-heading"><a data-no-turbolink="true" href="#"><%= facet.title %></a></h5>
      <div style="" aria-expanded="true" class="panel-collapse facet-content collapse in">
        <div class="panel-body">
          <ul class="facet-values list-unstyled">
          <% facet.values.each do |value| %>
            <li><span class="facet-label">
            <% facet_arr = [] %>
            <% facet_arr.push value[:action] %>
            <% params[:article_facets].to_a.each do |param_facet| %>
              <% facet_arr.push param_facet %>
            <% end %>
            <%= link_to value[:value], url_for(params.merge(article_facets: facet_arr)), class: 'facet_select' %></span>
            <span class="facet-count"><%= value[:count] %></span></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
